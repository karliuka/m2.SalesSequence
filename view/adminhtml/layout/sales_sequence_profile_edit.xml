<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    layout="admin-2columns-left"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Faonni\SalesSequence\Block\Adminhtml\Profile\Edit" name="sales_sequence_profile.edit.container"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Faonni\SalesSequence\Block\Adminhtml\Profile\Edit\Tabs" name="profile_tabs">
                <block class="Faonni\SalesSequence\Block\Adminhtml\Profile\Edit\Tab\General" name="profile_tab_general"/>
                <block class="Faonni\SalesSequence\Block\Adminhtml\Profile\Edit\Tab\Format" name="profile_tab_format"/>
                <block class="Faonni\SalesSequence\Block\Adminhtml\Profile\Edit\Tab\Ranges" name="profile_tab_ranges"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">profile_tab_general</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">format</argument>
                    <argument name="block" xsi:type="string">profile_tab_format</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">ranges</argument>
                    <argument name="block" xsi:type="string">profile_tab_ranges</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
